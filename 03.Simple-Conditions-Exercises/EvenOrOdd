using System;
namespace chetnoNEchetno
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = int.Parse(Console.ReadLine());

            if (number % 2 ==0 )
            {
                Console.WriteLine("Nuber: "+ number +" is even");
            }
            else
            {
                Console.WriteLine("Number: {0} is odd" ,number );
            }
        }
    }
}
